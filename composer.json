{
    "name": "loophp/psr-http-message-bridge-bundle",
    "description": "Register symfony/psr-http-message-bridge classes in your Symfony application.",
    "license": "MIT",
    "type": "symfony-bundle",
    "keywords": [
        "http",
        "psr-7",
        "psr-17",
        "psr-http-message-bridge",
        "symfony-bundle"
    ],
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "homepage": "http://github.com/loophp/psr-http-message-bridge-bundle",
    "require": {
        "php": ">= 8.1",
        "symfony/psr-http-message-bridge": "^6.4 || ^7"
    },
    "require-dev": {
        "ext-pcov": "*",
        "drupol/php-conventions": "^6",
        "friends-of-phpspec/phpspec-code-coverage": "^6",
        "phpspec/phpspec": "^7",
        "symfony/framework-bundle": "^6.4 || ^7",
        "symfony/http-kernel": "^6.4 || ^7"
    },
    "autoload": {
        "psr-4": {
            "loophp\\PsrHttpMessageBridgeBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "phpro/grumphp": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "changelog-unreleased": "auto-changelog -c .auto-changelog -u",
        "changelog-version": "auto-changelog -c .auto-changelog -v",
        "grumphp": "./vendor/bin/grumphp run",
        "phpspec": "./vendor/bin/phpspec run"
    }
}
